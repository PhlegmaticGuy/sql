{
    "type": "library",
    "name": "mindplay/sql",
    "description": "Database framework and query builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Rasmus Schultz",
            "email": "rasmus@mindplay.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "mindplay\\sql\\": "src/"
        }
    },
    "require": {
        "php": ">=5.5",
        "ext-pdo": "*",
        "mindplay/unbox": "^2",
        "psr/log": "^1"
    },
    "require-dev": {
        "mindplay/testies": "dev-master",
        "mindplay/benchpress": "dev-master",
        "mockery/mockery": "~0.9.4",
        "phpunit/php-code-coverage": ">=2, <4"
    },
    "suggest": {
        "ext-pdo_pgsql": "for PostgreSQL support (duh.)",
        "ext-pdo_mysql": "for MySQL support (hello, Captain Obvious.)"
    }
}
